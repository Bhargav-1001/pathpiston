generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int               @id @default(autoincrement())
  email            String            @unique
  password         String
  name             String
  profilePhoto     String?
  ridingExperience ExperienceLevel
  bikes            Bike[]
  rideParticipants RideParticipant[]
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
}

model Bike {
  id     Int     @id @default(autoincrement())
  model  String
  specs  String?
  photo  String?
  user   User    @relation(fields: [userId], references: [id])
  userId Int
}

model RideCategory {
  id    Int         @id @default(autoincrement())
  name  String      @unique
  rides RideEvent[]
}

model RideEvent {
  id               Int               @id @default(autoincrement())
  title            String
  description      String?
  date             DateTime
  time             String
  meetingPoint     String
  destination      String
  estimatedKm      Float
  fuelStops        String?
  mealBreaks       String?
  difficultyLevel  ExperienceLevel
  registrationFees Float             @default(0.0)
  category         RideCategory      @relation(fields: [categoryId], references: [id])
  categoryId       Int
  participants     RideParticipant[]
  createdAt        DateTime          @default(now())
}

model RideParticipant {
  id       Int       @id @default(autoincrement())
  user     User      @relation(fields: [userId], references: [id])
  userId   Int
  ride     RideEvent @relation(fields: [rideId], references: [id])
  rideId   Int
  joinedAt DateTime  @default(now())

  @@unique([userId, rideId])
}

enum ExperienceLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}
